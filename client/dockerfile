# ------------ PROD

# Stage 1: Build
# Use a specific version instead of 'latest' to avoid "it broke overnight" syndrome
FROM node:22-alpine AS build
WORKDIR /app

COPY package*.json ./

# USE 'npm ci' instead of 'npm install'
# It's faster and ensures versions match your package-lock.json exactly
RUN npm ci

COPY . .
RUN npm run build --configuration=production

# Stage 2: Serve with Nginx
FROM nginx:alpine

# Remove default assets
RUN rm -rf /usr/share/nginx/html/*

# Copy your built app
COPY --from=build /app/dist/client-0.2/browser /usr/share/nginx/html

# Copy custom config
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Give the 'nginx' user ownership of the necessary directories
RUN chown -R nginx:nginx /usr/share/nginx/html /var/cache/nginx /var/log/nginx /etc/nginx/conf.d

# Use a writable path for the PID file
RUN touch /var/run/nginx.pid /run/nginx.pid \
    && chown nginx:nginx /var/run/nginx.pid /run/nginx.pid

    
USER nginx
# If port 80 fails due to permissions, change this to 8080 
# and update your traefik labels to match.
EXPOSE 80

# ------------ DEV

